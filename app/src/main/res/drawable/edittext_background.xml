<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="@android:color/white"/>

    <!-- Rounded Corners -->
    <corners android:radius="12dp"/>

    <!-- Stroke (Border) -->
    <stroke
        android:width="2dp"
        android:color="#DDDDDD"/>  <!-- Light Gray Border -->

    <!-- Padding inside EditText -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="8dp"
        android:bottom="8dp"/>
</shape>
